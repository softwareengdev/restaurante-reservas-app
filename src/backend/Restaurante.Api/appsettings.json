{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\MSSQLLocalDB;Database=RestauranteApi;User Id=res;Password=res;MultipleActiveResultSets=true;Encrypt=False;TrustServerCertificate=True;Application Name=RestauranteApi;"
  },
  "EfCore": {
    "CommandTimeoutSeconds": 180,
    "EnableDetailedErrors": false,
    "EnableSensitiveDataLogging": false,
    "MaxRetryCount": 5,
    "MaxRetryDelaySeconds": 30
  },
  "JwtSettings": {
    "Key": "GenerateASecureKeyOfAtLeast64CharactersUsingRandomNumberGeneratorForHS512", // Generate a strong key
    "Issuer": "https://localhost:5173",
    "Audience": "https://localhost:5173",
    "AccessTokenExpiryMinutes": 15,
    "RefreshTokenExpiryDays": 7
  }
}
